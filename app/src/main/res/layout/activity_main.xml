<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingTop="16dp"
    android:paddingEnd="16dp"
    tools:context=".MainActivity">

    <com.github.xs93.avi.AVLoadingIndicatorView
        android:id="@+id/loading_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:indicatorColor="?colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/smoothToShow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="smoothToShow" />

    <Button
        android:id="@+id/smoothToHide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="smoothToHide" />

    <Button
        android:id="@+id/show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="show" />

    <Button
        android:id="@+id/hide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="hide" />

    <Button
        android:id="@+id/startAnimation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="startAnimation" />

    <Button
        android:id="@+id/stopAnimation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="stopAnimation" />
</LinearLayout>